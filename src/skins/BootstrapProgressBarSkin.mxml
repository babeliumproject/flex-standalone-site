<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark">

	<fx:Script>
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor=true;
			super.initializationComplete();
		}
	</fx:Script>

	<!-- layer 1: fill -->
	<s:Rect left="0"
			right="0"
			top="0"
			bottom="0"
			radiusX="4">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x337ab7"
								 alpha="1"/>
				<s:GradientEntry color="0x286090"
								 alpha="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:RectangularDropShadow id="hldownstroke"
							 left="0"
							 right="0"
							 top="0"
							 blurX="5"
							 blurY="5"
							 alpha="0.14902"
							 distance="2"
							 angle="90"
							 color="0x000000"
							 tlRadius="4"
							 trRadius="4"/>
</s:SparkSkin>
