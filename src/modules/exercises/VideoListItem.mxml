<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  verticalAlign="top"
		  paddingTop="4"
		  paddingLeft="4"
		  paddingRight="4"
		  height="90"
		  width="100%">

	<mx:Image id="albumImage"
			  height="90"
			  width="90"
			  source="{getImageSource(data as ExerciseVO)}"/>
	<s:VGroup verticalAlign="top"
			  width="100%">
		<s:Label text="{data.title}"
				 selectable="false"/>
		<mx:HRule width="100%"
				  height="1"/>
		<s:HGroup width="100%">
			<s:Label text="{resourceManager.getString('myResources', 'MESSAGE_UPLOADER') + ': ' + data.userName}"/>
			<s:Label text="{data.duration + ' ' + resourceManager.getString('myResources', 'MESSAGE_SECONDS')}"/>
		</s:HGroup>
	</s:VGroup>


	<fx:Script>
		<![CDATA[
			import model.DataModel;

			import vo.ExerciseVO;

			public function getImageSource(temp:ExerciseVO):String
			{
				var url:String='';
				if (temp.source == "Red5")
					url=DataModel.getInstance().thumbURL + "/" + temp.thumbnailUri;
				else
					url=temp.thumbnailUri;
				return url;
			}
		]]>
	</fx:Script>

</s:HGroup>
