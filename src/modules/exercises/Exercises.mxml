<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
		  headerHeight="0"
		  borderThicknessBottom="0"
		  borderThicknessTop="0"
		  borderThicknessLeft="0"
		  borderThicknessRight="0"
		  layout="vertical"
		  backgroundAlpha="0.0"
		  borderStyle="none"
		  width="100%"
		  height="100%"
		  xmlns:ns1="modules.exercises.*">

	<mx:ViewStack id="exercisesViewStack"
				  width="100%"
				  height="100%"
				  selectedIndex="{ DataModel.getInstance().viewExerciseViewStackIndex }">
		<ns1:Nagusia id="exerciseModule"
					 width="100%"
					 height="100%">
		</ns1:Nagusia>
		<ns1:EvaluationRequest id="exerciseEvaluationRequest"
							   width="100%"
							   height="100%">
		</ns1:EvaluationRequest>

	</mx:ViewStack>

	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import model.DataModel;
			
			public function onTabHide():void{
				Alert.show("Exercise tab is now hidden");
			}
			
			public function onTabShow():void{
				Alert.show("Exercise tab is now showing");
			}
		]]>
	</mx:Script>

</mx:Panel>
