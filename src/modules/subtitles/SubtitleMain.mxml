<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:subtitles="modules.subtitles.*">
	
	<mx:VBox styleName="sectionInfoBox" width="100%">
		<mx:Label id="subtitleModuleTitle" styleName="sectionTitleLabel" text="{resourceManager.getString('myResources','LABEL_SUBTITLE')}"/>
		
		<mx:Text text="{resourceManager.getString('myResources','TEXT_MODULE_INFO_SUBTITLE')}"/>
		
		<mx:HBox horizontalAlign="right" width="100%">
			<mx:TabBar dataProvider="subtitleViewStack"/>
		</mx:HBox>
	</mx:VBox>
	
	<mx:ViewStack id="subtitleViewStack">
		
		<subtitles:SubtitlePendingList name="{resourceManager.getString('myResources','LABEL_PENDING_SUBTITLES')}"/>
		
		<subtitles:SubtitleReviewList name="{resourceManager.getString('myResources','LABEL_REVIEW_SUBTITLES')}"/>
		
	</mx:ViewStack>

	
</mx:VBox>
