<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:main="modules.main.*"
		 xmlns:subtitles="modules.subtitles.*"
		 
		 width="100%"
		 creationComplete="onComplete()">

	<fx:Script>
		<![CDATA[
			import events.VideoStopEvent;
			import events.ViewChangeEvent;
			
			import model.DataModel;
			
			import mx.events.IndexChangedEvent;

			private function onComplete():void
			{
				subtitleModuleViewStack.addEventListener(IndexChangedEvent.CHANGE, onChildChange);
			}

			private function onChildChange(event:IndexChangedEvent):void
			{
				// Video stop on tab change
				new VideoStopEvent().dispatch();
			}

			private function set onUserAuthenticationStatus(value:Boolean):void
			{
				if (DataModel.getInstance().isLoggedIn == true)
					new ViewChangeEvent(ViewChangeEvent.VIEW_SUBTITLES_SIGNED_IN).dispatch();
				else
					new ViewChangeEvent(ViewChangeEvent.VIEW_SUBTITLES_UNSIGNED).dispatch();
			}
		]]>
	</fx:Script>

	<mx:ViewStack id="subtitleModuleViewStack"
				  width="100%"
				  height="100%"
				  selectedIndex="{ DataModel.getInstance().currentSubtitleViewStackIndex }"
				  resizeToContent="true"
				  creationPolicy="all">

		<!-- The current user has no rights to access this module. -->
		<s:NavigatorContent id="subtitleUnauthorizedUserNavContent">
			<main:UnauthorizedNotice id="subtitleUnauthorizedUser"/>
		</s:NavigatorContent>
	
		<!-- The user is logged in. The app lists the exercises that need subtitles or subtitle reviewing. -->
		<s:NavigatorContent id="subtitleListOverviewNavContent">
			<subtitles:SubtitleListOverview id="subtitleListOverview"/>
		</s:NavigatorContent>
	
	</mx:ViewStack>

	<fx:Binding source="{DataModel.getInstance().isLoggedIn}"
				destination="onUserAuthenticationStatus"/>


</s:VGroup>
