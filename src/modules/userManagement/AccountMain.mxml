<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:userManagement="modules.userManagement.*"
		  width="100%"
		  xmlns:skins="skins.*">

	<fx:Script>
		<![CDATA[
			import model.DataModel;

			import mx.collections.ArrayCollection;

			public static const CREDIT_HISTORY_VIEWSTACK_INDEX:int=0;
			public static const CHANGE_PASSWORD_VIEWSTACK_INDEX:int=1;
			public static const TOP_COLLABORATORS_VIEWSTACK_INDEX:int=2;

			public function set onTabChange(flag:Boolean):void
			{
				//changePass.resetToolTips();
			}
		]]>
	</fx:Script>

	<fx:Binding source="{DataModel.getInstance().stopVideoFlag}"
				destination="onTabChange"/>


	<s:BorderContainer styleName="sectionInfoBox"
					   width="100%"
					   minHeight="0">
		<s:layout>
			<s:VerticalLayout paddingTop="16"/>
		</s:layout>
		<s:Label text="{resourceManager.getString('myResources','TEXT_USER_ACCOUNT')}"
				 styleName="sectionInfoTitleLabel"
				 paddingLeft="16"
				 paddingRight="16"/>
		<s:Label text="Enter section description here."
				 paddingLeft="16"
				 paddingRight="16"/>
		<s:HGroup horizontalAlign="right"
				  width="100%"
				  verticalAlign="bottom"
				  gap="0">
			<skins:HorizontalSeparatorLine width="100%"/>
			<s:TabBar dataProvider="{accountOptionsViewStack}"
					  skinClass="skins.AccountTabBarSkin"
					  cornerRadius="8"/>
			<skins:HorizontalSeparatorLine width="16"/>
		</s:HGroup>
	</s:BorderContainer>
	<mx:ViewStack id="accountOptionsViewStack"
				  height="100%"
				  width="100%"
				  resizeToContent="true">
		<s:NavigatorContent id="creditHistoryContainerNavContent"
							label="{resourceManager.getString('myResources','LABEL_CREDIT_HISTORY')}">
			<userManagement:CreditHistoryPanel id="creditHistoryContainer"/>
		</s:NavigatorContent>

		<s:NavigatorContent id="topCollaboratorsNavContent"
							label="{resourceManager.getString('myResources','LABEL_TOP_COLLABORATORS')}">
			<userManagement:TopCollaborators id="topCollaborators"/>
		</s:NavigatorContent>

		<s:NavigatorContent id="userProfile"
							label="{resourceManager.getString('myResources','LABEL_MY_PROFILE')}">
			<userManagement:ChangeUserInfo/>
		</s:NavigatorContent>

	</mx:ViewStack>
</s:VGroup>
