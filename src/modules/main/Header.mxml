<?xml version="1.0" encoding="utf-8"?>
<main:HeaderClass xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
				  xmlns:main="modules.main.*">

	<s:HGroup width="100%"
			 horizontalAlign="left"
			 verticalAlign="middle"
			 paddingLeft="8">
		<s:Label text="{resourceManager.getString('myResources','LABEL_LANGUAGE')}"/>
		<main:LocalizationComboBox id="localeComboBox"/>
	</s:HGroup>

	<s:HGroup horizontalAlign="right"
			 verticalAlign="middle"
			 width="100%">

		<mx:LinkButton id="helpFAQButton"
					   icon="@Embed(source='../../resources/images/help.png')"
					   click="helpFAQ_clickHandler(event)"
					   toolTip="Help/FAQ"/>
		
		<mx:Canvas height="100%">
			<s:HGroup id="anonymousCP"
					 x="0"
					 y="0"
					 height="100%"
					 horizontalAlign="right"
					 verticalAlign="middle"
					 visible="true">
				<mx:LinkButton id="signInButton"
							   styleName="yellowLinkButton"
							   label="{resourceManager.getString('myResources', 'LABEL_SIGN_IN')}"
							   click="signInClickHandler()"/>
				<mx:LinkButton id="signUpButton"
							   styleName="yellowLinkButton"
							   label="{resourceManager.getString('myResources', 'LABEL_SIGN_UP')}"
							   click="signUpClickHandler()"/>
			</s:HGroup>
			<s:HGroup id="userCP"
					 x="0"
					 y="0"
					 height="100%"
					 horizontalAlign="right"
					 verticalAlign="middle"
					 visible="false">
				<mx:VRule height="20"
						  styleName="sectionTitleHRule"/>
				<s:HGroup styleName="hvCenteredBox">
					<s:Label text="{resourceManager.getString('myResources','TEXT_CREDIT_COUNT')}"
							  styleName="boldDarkerGreyLabel"/>
					<mx:LinkButton id="uCrds"
								   label="cr."
								   styleName="creditLinkButton"/>
				</s:HGroup>
				<mx:VRule height="20"
						  styleName="sectionTitleHRule"/>
				<mx:PopUpMenuButton id="userCPName"
									label="UserName"
									labelFunction="userOptionsLabelFunction"
									dataProvider="{userOptions}"
									itemClick="userOptionsItemClickHandler(event)"/>
				<mx:LinkButton id="signOutButton"
							   label="{resourceManager.getString('myResources','LABEL_SIGN_OUT')}"
							   click="signOutClickHandler()"/>
			</s:HGroup>
		</mx:Canvas>
	</s:HGroup>
</main:HeaderClass>
