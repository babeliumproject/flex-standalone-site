<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%"
		 height="100%">

	<fx:Script>
		<![CDATA[
			private function externalLinkClickHandler(url:String):void
			{
				navigateToURL(new URLRequest(url));
			}

		]]>
	</fx:Script>
	
	<s:VGroup styleName="sectionInfoBox"
			 width="100%">
		<s:Label text="Babelium Project Help/FAQ"
				  styleName="sectionInfoTitleLabel"/>
		<mx:Text text="Enter section description here."/>
	</s:VGroup>

	<s:Label text="Video tutorials"
			  styleName="sectionTitleLabel"/>
	<s:Label text="The following videos explain how to use some of the features of Babelium Project (in English)."/>
	<s:HGroup>
		<mx:Spacer/>
		<mx:LinkButton label="How to add subtitles and roles"
					   textDecoration="underline"
					   click="externalLinkClickHandler('http://www.youtube.com/watch?v=zYKkoFJU7i8')"/>
	</s:HGroup>
	<s:HGroup>
		<mx:Spacer/>
		<mx:LinkButton label="How to record a response following an exercise"
					   textDecoration="underline"
					   click="externalLinkClickHandler('http://www.youtube.com/watch?v=VstggUIIMlY')"/>
	</s:HGroup>

</s:VGroup>
