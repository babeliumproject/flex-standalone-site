<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<s:layout>
		<s:VerticalLayout paddingTop="4"
						  paddingBottom="4"
						  paddingLeft="8"
						  paddingRight="8"
						  verticalAlign="middle"/>
	</s:layout>
	
	
	<s:Label text="{data.fullname}" styleName="sectionTitleLabel"/>
	<s:Label text="{data.summary}"/>
	
	<s:Button id="viewCourse"
			  label="Go to course"
			  click="viewCourse_clickHandler(event)"/>

	<fx:Script>
		<![CDATA[
			import control.URLManager;
			protected function viewCourse_clickHandler(event:MouseEvent):void
			{
				URLManager.getInstance().redirect('/course/view/'+data.id);
			}
			
		]]>
	</fx:Script>
	
</s:MXDataGridItemRenderer>
