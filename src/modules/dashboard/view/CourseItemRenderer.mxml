<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	
	
	<s:Label text="{data.fullname}" styleName="sectionTitleLabel"/>
	<s:Label text="{data.summary}"/>
	
	<s:Button id="viewCourse"
			  label="{resourceManager.getString('myResources','VIEW_COURSE')}"
			  click="viewCourse_clickHandler(event)"/>

	<fx:Script>
		<![CDATA[
			protected function viewCourse_clickHandler(event:MouseEvent):void
			{
				parentDocument.viewCourse(data);
			}
			
		]]>
	</fx:Script>
	
</s:ItemRenderer>
