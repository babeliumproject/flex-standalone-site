<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   xmlns:skins="skins.*"
				   styleName="lightBorderContainer">
	<s:layout>
		<s:VerticalLayout paddingTop="20"
						  paddingLeft="0"
						  paddingRight="0"
						  paddingBottom="10"
						  gap="0"/>
	</s:layout>

	<fx:Script>
		<![CDATA[
			import events.RecordingEndOptionEvent;
			
			import model.DataModel;
			
			import mx.resources.ResourceManager;
		]]>
	</fx:Script>


	<s:Label text="{ResourceManager.getInstance().getString('myResources','AVAILABLE_ACTIONS')}"
			 fontWeight="bold"
			 fontSize="14"/>

	<s:HGroup width="100%"
			  verticalAlign="middle">
		<s:VGroup horizontalAlign="left"
				  verticalAlign="middle"
				  width="100%">

			<s:Button id="publishRespLinkButton"
							  label="{ResourceManager.getInstance().getString('myResources','SAVE_RESPONSE')}"
							  click="dispatchEvent(new RecordingEndOptionEvent(RecordingEndOptionEvent.SAVE_RESPONSE))"
							  styleName="btn-success"
							  width="100%"/>
			<s:Button id="watchRespLinkButton"
							  label="{ResourceManager.getInstance().getString('myResources','WATCH_RESPONSE')}"
							  click="dispatchEvent(new RecordingEndOptionEvent(RecordingEndOptionEvent.VIEW_BOTH))"
							  styleName="btn-default"
							  width="100%"
							  />
		</s:VGroup>
		<s:VGroup horizontalAlign="right"
				  verticalAlign="middle"
				  width="100%">
			<s:Button id="recordAgainLinkButton"
							  label="{ResourceManager.getInstance().getString('myResources', 'RECORD_AGAIN')}"
							  click="dispatchEvent(new RecordingEndOptionEvent(RecordingEndOptionEvent.RECORD_AGAIN))"
							  styleName="btn-danger"
							  width="100%"/>

			<!-- styleName="watchRecordedButton" -->
			<s:Button id="discardRespLinkButton"
							  label="{ResourceManager.getInstance().getString('myResources','DISCARD_RESPONSE')}"
							  click="dispatchEvent(new RecordingEndOptionEvent(RecordingEndOptionEvent.DISCARD_RESPONSE))"
							  styleName="btn-default"
							  width="100%"/>

		</s:VGroup>
	</s:HGroup>
</s:BorderContainer>
