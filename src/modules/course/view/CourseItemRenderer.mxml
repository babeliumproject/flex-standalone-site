<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<s:layout>
		<s:VerticalLayout paddingTop="4"
						  paddingBottom="4"
						  paddingLeft="8"
						  paddingRight="8"
						  verticalAlign="middle"/>
	</s:layout>
	
	
	<s:Label id="courseTitleLbl" styleName="sectionTitleLabel"/>
	<s:Label id="courseSummaryLbl"/>
	
	<s:Button id="viewCourse"
			  label="{ResourceManager.getInstance().getString('myResources','GO_TO_COURSE')}"
			  click="viewCourse_clickHandler(event)"
			  buttonMode="true"
			  styleName="btn-primary"/>

	<fx:Script>
		<![CDATA[
			import control.URLManager;
			
			import mx.resources.ResourceManager;
			
			override public function set data(value:Object):void{
				super.data = value;
				
				if (value == null)
					return;
					
				courseTitleLbl.text=value.fullname;
				courseSummaryLbl.text=value.summary;
			}

			protected function viewCourse_clickHandler(event:MouseEvent):void
			{
				URLManager.getInstance().redirect('/course/view/'+data.id);
			}
			
		]]>
	</fx:Script>
	
</s:MXDataGridItemRenderer>
