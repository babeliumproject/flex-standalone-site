				_responseId=selectedItem.responseId;
				_responseName=selectedItem.responseFileIdentifier;

				exercisePlayer.setBideoIzena(_exerciseName, _exerciseId);
				exercisePlayer.ezabatuFletxak();
				exercisePlayer.setRolAukeratua(_responseCharacterName);

				responsePlayer.setBideoIzena(_responseName, _responseId);
				responsePlayer.ezabatuFletxak();
				responsePlayer.setRolAukeratua(_responseCharacterName);
