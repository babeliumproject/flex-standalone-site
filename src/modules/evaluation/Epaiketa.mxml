			// *****************************************************
			// **     Bideoak batera erreproduzitzeko kontrolak   **
			private function playBatera():void
			{
				exercisePlayer.playVid();
				responsePlayer.playVid();
				responsePlayer.muteatu();
				biakBatera=true;
			}

			private function pauseBatera():void
