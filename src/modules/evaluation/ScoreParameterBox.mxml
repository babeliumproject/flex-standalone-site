<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   xmlns:rating="com.asfusion.controls.*"
				   width="100%"
				   borderStyle="solid"
				   xmlns:hulstkamp="com.hulstkamp.*">
	<s:layout>
		<s:HorizontalLayout gap="0"
							verticalAlign="middle"
							paddingLeft="0"
							paddingRight="0"/>
	</s:layout>
	<mx:Text id="parameterText"
			 text="{resourceManager.getString('myResources',text)}"
			 width="{this.width - 2 - scoreMeter.width}"
			 height="100%"/>
	<s:HGroup id="scoreMeter"
			  gap="0"
			  horizontalAlign="center"
			  verticalAlign="middle"
			  width="140"
			  height="100%">
		<s:Label text="-"/>
		<hulstkamp:AhFxRatingComponent id="ratingComponent"
									   skinClass="com.hulstkamp.AhRatingComponentStarSkin"/>
		<s:Label text="  +"/>
	</s:HGroup>

	<fx:Script>
		<![CDATA[
			[Bindable]
			private var text:String='';

			public function set parameter(text:String):void
			{
				this.text=text;
			}
		]]>
	</fx:Script>
</s:BorderContainer>
