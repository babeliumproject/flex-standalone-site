<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 xmlns:rating="com.asfusion.controls.*"
		 width="100%"
		 verticalAlign="middle"
		 paddingLeft="0"
		 paddingRight="0"
		 horizontalGap="0"
		 borderStyle="solid">
	<mx:Text id="parameterText"
			 text="{resourceManager.getString('myResources',text)}"
			 width="{this.width - 2 - scoreMeter.width}"/>
	<mx:HBox id="scoreMeter"
			 horizontalGap="0"
			 horizontalAlign="center"
			 verticalAlign="middle"
			 width="140"
			 height="100%">
		<mx:Label text="-"/>
		<rating:Rating id="ratingComponent"
					   click="ratingItemClickHandler(event)"/>
		<mx:Label text="  +"/>
	</mx:HBox>

	<mx:Script>
		<![CDATA[
			[Bindable]
			private var text:String='';

			public function set parameter(text:String):void
			{
				this.text=text;
			}

			public function ratingItemClickHandler(event:MouseEvent):void
			{
				(event.currentTarget).value=(event.currentTarget).selectedValue;
			}
		]]>
	</mx:Script>
</mx:HBox>
