					new EvaluationEvent(EvaluationEvent.GET_RESPONSES_ASSESSED_BY_CURRENT_USER, null, _userId).dispatch();
				}
				else
				{
					_userId=0;
					waitingForAssessmentList=new ArrayCollection();
					assessedToCurrentUserList=new ArrayCollection();
					assessedByCurrentUserList=new ArrayCollection();
					assessmentDetailList=new ArrayCollection();
				}
				assessmentsOfSelectedResponse.visible=false;
				ratingBox.visible=false;
			}
			
			private function sendAssessmentClickHandler():void
			{
				if ((ratingRadioGroup.selectedValue) && (commentsTextArea.text != ""))
				{
					_score=ratingRadioGroup.selectedValue as int;
					_comment=commentsTextArea.text;
					var evaluation:EvaluationVO=new EvaluationVO();
					evaluation.score=_score;
					evaluation.comment=_comment;
					evaluation.responseId=_responseId;
					evaluation.userId=_userId;
					evaluation.evaluationVideoFileIdentifier=_videoCommentName;
					
					//If the user added a video comment
					if (videoCommentCheckBox.selected)
						new EvaluationEvent(EvaluationEvent.ADD_VIDEO_ASSESSMENT, evaluation).dispatch();
					else
						new EvaluationEvent(EvaluationEvent.ADD_ASSESSMENT, evaluation).dispatch();
					reset();
				}
				else
				{
					CustomAlert.info(resourceManager.getString('myResources', 'YOUMUSTSPECIFYASCORE'));
				}
			}
			
