<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 paddingTop="8"
		 paddingBottom="8"
		 paddingLeft="8"
		 paddingRight="8"
		 verticalAlign="middle"
		 fontFamily="Arial">

	<mx:Metadata>
		[ResourceBundle("myResources")]
	</mx:Metadata>
	
	<mx:VBox height="90"
			 width="100%"
			 verticalGap="2">
		<mx:HBox horizontalAlign="left"
				 verticalAlign="middle"
				 horizontalGap="2"
				 width="100%">
			<mx:Image width="16"
					  height="16"
					  toolTip="{exerciseLanguage.source}"
					  id="exerciseLanguage"/>
			<mx:LinkButton label="{data.title}"
						   fontSize="12"
						   width="100%"
						   textAlign="left"
						   click="titleClickHandler(event)"/>
		</mx:HBox>
		<mx:HRule height="1"
				  width="100%"/>
		<mx:HBox>
			<mx:Image id="thumbnail"
					  scaleContent="true"
					  source="{getImageSource(data as ExerciseVO)}"
					  autoLoad="true"
					  click="imageClickHandler(event)"
					  width="120"
					  height="90"
					  toolTip="{data.title}"
					  useHandCursor="true" buttonMode="true"
					  />
			<mx:VBox>
				<mx:HBox>
					<mx:Label text="{resourceManager.getString('myResources','LABEL_RESPONSE_RECORDER')}"
					<mx:LinkButton label="{data.userName}"/>
					<mx:Label text="{data.userLevel}"/>
				</mx:HBox>
				<mx:HBox>
					<mx:Label text="{resourceManager.getString('myResources','LABEL_EXERCISE_LEVEL')}"
					<mx:LinkButton label="{data.userName}"/>
				</mx:HBox>
				<mx:Label text="{data.addingDate}"
						  fontWeight="bold"/>
			</mx:VBox>
		</mx:HBox>
	</mx:VBox
</mx:HBox>
