<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml">
	
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			public function init():void
			{
				new EvaluationEvent(EvaluationEvent.GET_WAITING_ASSESSMENT).dispatch();
			}
			
			public function set onResponsesWaitingAssessmentRetrieved(value:Boolean):void
			{
				if (DataModel.getInstance().onResponsesWaitingAssessmentRetrieved)
				{
					var dataProvider:ArrayCollection=DataModel.getInstance().responsesWaitingAssessment;
					waitingAssessmentListTable.rowCount=dataProvider.length;
					waitingAssessmentListTable.dataProvider=dataProvider;
					DataModel.getInstance().onResponsesWaitingAssessmentRetrieved = false;
				}
			}
			
		]]>
	</mx:Script>
	
	<mx:Binding source="{DataModel.getInstance().responsesWaitingAssessmentRetrieved}"
				destination="this.onResponsesWaitingAssessmentRetrieved"/>
	
	<mx:DataGrid id="waitingAssessmentListTable"
				 width="100%"
				 editable="false"
				 selectable="false"
				 verticalScrollPolicy="off"
				 sortableColumns="false"
				 draggableColumns="false"
				 headerHeight="0"
				 dataProvider="{DataModel.getInstance().availableExercises}">
		<mx:columns>
			<mx:DataGridColumn itemRenderer="modules.evaluation.WaitingAssessmentItem"/>
		</mx:columns>
	</mx:DataGrid>
	
</mx:VBox>
