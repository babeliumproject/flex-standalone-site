<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:skins="skins.*" 
		  xmlns:view="modules.create.view.*"
		  width="100%"
		  implements="modules.IGroupInterface">
	<fx:Script>
		<![CDATA[
			import mx.events.IndexChangedEvent;

			import spark.events.IndexChangeEvent;

			protected function stepViewStack_changeHandler(event:IndexChangedEvent):void
			{
				// TODO Auto-generated method stub

			}
			
			public function resetGroup():void{
				if(exerciseClassification)
					exerciseClassification.resetComponent();
				if(mediaUpload)
					mediaUpload.resetComponent();
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:BorderContainer styleName="sectionInfoBox"
					   width="100%"
					   minHeight="0">
		<s:layout>
			<s:VerticalLayout paddingTop="16"/>
		</s:layout>
		<s:Label text="Create new exercise"
				 styleName="sectionInfoTitleLabel"
				 paddingLeft="16"
				 paddingRight="16"/>
		<s:Label text="{resourceManager.getString('myResources','UPLOAD_SECTION_DESCRIPTION')}"
				 paddingBottom="16"
				 paddingLeft="16"
				 paddingRight="16"/>
		<skins:HorizontalSeparatorLine width="100%"/>
	</s:BorderContainer>

	<s:BorderContainer width="100%"
					   minHeight="0">
		<s:layout>
			<s:VerticalLayout paddingBottom="16"
							  paddingLeft="16"
							  paddingRight="16"
							  paddingTop="16"/>
		</s:layout>
		<s:HGroup width="100%" verticalAlign="middle" horizontalAlign="left">
			<s:TabBar skinClass="skins.BootstrapTabBar"
							  dataProvider="{stepViewStack}"/>
		</s:HGroup>
	</s:BorderContainer>

	
	<s:VGroup paddingTop="16"
			  paddingBottom="16"
			  paddingLeft="16"
			  paddingRight="16"
			  width="100%">


		<mx:ViewStack id="stepViewStack"
					  change="stepViewStack_changeHandler(event)"
					  width="100%">
			<s:NavigatorContent label="1. Label the exercise">
				<view:LabelExercise id="exerciseClassification" width="100%"/>
			</s:NavigatorContent>
			<s:NavigatorContent label="2. Add media">
				<view:UploadMedia id="mediaUpload" width="100%"/>
			</s:NavigatorContent>
			<s:NavigatorContent label="3. Preview Publish">
				<s:VGroup>
					<s:Label text="Add controls for previewing and publishing"/>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:ViewStack>

	</s:VGroup>

</s:VGroup>
